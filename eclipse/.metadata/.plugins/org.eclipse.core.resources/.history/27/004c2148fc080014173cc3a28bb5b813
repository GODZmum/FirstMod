		Configuration configuration = new Configuration(configFile);
		


	}

	@SubscribeEvent
	public void onConfigurationChangedEvent(ConfigChangedEvent.OnConfigChangedEvent event){
		if(event.modID.equalsIgnoreCase(Reference.MOD_ID)){
			//resync configs
			
	}

	}
}
